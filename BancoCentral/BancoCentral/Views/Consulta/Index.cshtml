@model IEnumerable<BancoCentral.Models.Consulta>

@{
    ViewBag.Title = "Foro";
}
<div class="container-fluid">
    <h1 class="text-center">Foro</h1>
    <table class="table table-hover table-dark">
        <thead>
            <tr>
                <th scope="col">Cliente:</th>
                <th scope="col">Consulta:</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.consulta1)</td>
                    @*<td>Responder@Html.ActionLink("Edit", "Edit", new { id = item.idConsulta })</td>*@
                    <td>@Html.ActionLink("Responder","Responder", new { id = item.idConsulta })</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a href="/Consulta/Create" class="nav-link">Crear Consulta</a>
</div>