<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/estilos.css")" rel="stylesheet" type="text/css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-3.3.1.min.js" type="text/javascript"></script>
    <script src="~/Scripts/login.js" type="text/javascript"></script> 
</head>
<body class="m-0 p-0">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark navbar fixed-top mb-5">
        <a class="navbar-brand" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <a href="/Home/Index" class="nav-link">Inicio</a>
                <a href="/Home/About" class="nav-link">Nuestra Empresa</a>

            </ul>
            @if (Session["nombreCliente"] == null)
            {
                <a href="/Clientes/Create" class="nav-link">¿No te has suscrito?</a>

                <!--   <input type="Button" value="Iniciar Sesión" id="iniciarSesion" class="btn btn-outline-success my-2 my-sm-0" />  -->
                @*      @Html.TextBox("email", "Correo", new { @class = "form-control mr-sm-2", id = "email" });    *@ 


                    }
                    else
                    {
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                                @Session["nombreCliente"]
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <a href="/Clientes/CerrarSesion" class="nav-link">Cerrar Sesión</a>

                            </ul>
                        </div>
                    }
                </div>
            </nav>

            <div class="loader">

            </div>

            @RenderSection("SideBar", required: false)



            <div class="container body-content">
                <div id="content">
                    @RenderSection("Content", required: false)
                </div>

                @RenderBody()

                <hr />
                <footer class="text-center">
                    <p>&copy; @DateTime.Now.Year MASTERS-JKL</p>
                </footer>


            </div>
            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)
        </body>
        </html>
